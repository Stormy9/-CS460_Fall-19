@model CS460_Hwk08.Models.RaceResult

@{
    ViewBag.Title = "add new meet results";
}

<h2>add new meet results</h2>

<!-------------------------------------------------------------------------------------->
@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })

        <!------------------------------------------------------------------------------>
        <div class="form-group">
            @Html.LabelFor(model => model.LocationID, "location", htmlAttributes: 
                                               new { @class = "control-label col-md-2" })

            <div class="col-md-10">
                @Html.DropDownList("LocationID", null, "location", htmlAttributes: 
                new { @class = "form-control", placeholder = "location", required = "required" })

                @Html.ValidationMessageFor(model => model.LocationID, "", 
                                                          new { @class = "text-danger" })
            </div>
        </div>

        <!------------------------------------------------------------------------------>
        <div class="form-group">
            @Html.LabelFor(model => model.MeetDate, htmlAttributes: 
                                               new { @class = "control-label col-md-2" })

            <div class="col-md-10">
                @Html.EditorFor(model => model.MeetDate, new { htmlAttributes = 
                                        new { @class = "form-control", required = "required" } })

                @Html.ValidationMessageFor(model => model.MeetDate, "", 
                                                          new { @class = "text-danger" })
            </div>
        </div>

        <!------------------------------------------------------------------------------>
        <div class="form-group">
            @Html.LabelFor(model => model.TeamID, "team", htmlAttributes: 
                                               new { @class = "control-label col-md-2" })

            <div class="col-md-10">
                @Html.DropDownList("TeamID", null, "team name", htmlAttributes: 
                              new { @class = "form-control", placeholder = "team name" })

                @Html.ValidationMessageFor(model => model.TeamID, "", 
                                                          new { @class = "text-danger" })
            </div>
        </div>

        <!------------------------------------------------------------------------------>
        <div class="form-group">
            @Html.LabelFor(model => model.CoachID, "coach", htmlAttributes: 
                                               new { @class = "control-label col-md-2" })

            <div class="col-md-10">
                @Html.DropDownList("CoachID", null, "coach name", htmlAttributes: 
                             new { @class = "form-control", placeholder = "coach name" })

                @Html.ValidationMessageFor(model => model.CoachID, "", 
                                                          new { @class = "text-danger" })
            </div>
        </div>

        <!------------------------------------------------------------------------------>
        <div class="form-group">
            @Html.LabelFor(model => model.EventID, "event", htmlAttributes: 
                                               new { @class = "control-label col-md-2" })

            <div class="col-md-10">
                @Html.DropDownList("EventID", null, "event type", htmlAttributes: 
               new { @class = "form-control", placeholder = "event type", required = "required" })

                @Html.ValidationMessageFor(model => model.EventID, "", 
                                                         new { @class = "text-danger" })
            </div>
        </div>

        <!------------------------------------------------------------------------------>
        <div class="form-group">
            @Html.LabelFor(model => model.Gender, htmlAttributes: 
                                               new { @class = "control-label col-md-2" })

            <div class="col-md-10">
                @Html.DropDownList("gender",
                    (IEnumerable<SelectListItem>)ViewBag.GenderList,
                        "gender?", new { @class = "form-control", required = "required" })

                @Html.ValidationMessageFor(model => model.Gender, "", 
                                                          new { @class = "text-danger" })
            </div>
        </div>

        <!------------------------------------------------------------------------------>
        <div class="form-group">
            @Html.LabelFor(model => model.AthleteID, "athlete", htmlAttributes: 
                                               new { @class = "control-label col-md-2" })

            <div class="col-md-10">
                @Html.DropDownList("AthleteID", null, "athlete name", htmlAttributes: 
                new { @class = "form-control", placeholder = "athlete name", required = "required" })

                @Html.ValidationMessageFor(model => model.AthleteID, "", 
                                                          new { @class = "text-danger" })
            </div>
        </div>

        <!------------------------------------------------------------------------------>
        <div class="form-group">
            @Html.LabelFor(model => model.FinishTime, htmlAttributes: 
                                               new { @class = "control-label col-md-2" })

            <div class="col-md-10">
                @Html.EditorFor(model => model.FinishTime, new { htmlAttributes = 
                new { @class = "form-control", placeholder = "finish time", required = "required" } })

                @Html.ValidationMessageFor(model => model.FinishTime, "", 
                                                          new { @class = "text-danger" })
            </div>
        </div>

        <!------------------------------------------------------------------------------>
        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="save" class="btn btn-default" />
            </div>
        </div>
        <!------------------------------------------------------------------------------>
    </div>
}
<!-------------------------------------------------------------------------------------->
<div>
    @Html.ActionLink("back to all meet results", "Index")
</div>
<!-------------------------------------------------------------------------------------->
@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
