@model IEnumerable<CS460_Hwk08.Models.Athlete>

@{
    ViewBag.Title = "student athletes";
}

<h2>student athletes</h2>

<!-------------------------------------------------------------------------------------->
<div class=" btn my_add">
    <b>@Html.ActionLink("add a new athlete", "Create")</b>
</div>

<div class="btn my_add">
    <b>@Html.ActionLink("see all races for an athlete", "Results", "RaceResults")</b>
</div>

<div class="btn my_add">
    <b>@Html.ActionLink("check athlete stats", "Stats", "RaceResults")</b>
</div>

<!-------------------------------------------------------------------------------------->
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.AthleteName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Gender)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Coach.CoachName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Team.TeamName)
        </th>
        <th></th>
    </tr>
    <!---------------------------------------------------------------------------------->
    @foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.AthleteName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Gender)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Team.TeamName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Coach.CoachName)
            </td>
            <!-------------------------------------------------------------------------->
            <td>
                @Html.ActionLink("details", "Details", new { id = item.AthleteID }) |
                @Html.ActionLink("edit", "Edit", new { id = item.AthleteID }) |
                @Html.ActionLink("delete", "Delete", new { id = item.AthleteID })
            </td>
        </tr>
}
</table>
