@model CS460_Hwk08.Models.Athlete

@{
    ViewBag.Title = "add a new athlete";
}

<h2>add a new athlete</h2>


@using (Html.BeginForm()) 
{
    @Html.AntiForgeryToken()
<!-------------------------------------------------------------------------------------->
    <div class="form-horizontal">
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })

        <!------------------------------------------------------------------------------>
        <div class="form-group">
            @Html.LabelFor(model => model.AthleteName, 
                               htmlAttributes: new { @class = "control-label col-md-2" })

            <div class="col-md-10">
                @Html.EditorFor(model => model.AthleteName, new { htmlAttributes = 
                new { @class = "form-control", placeholder = "athlete name", required = "required" } })

                @Html.ValidationMessageFor(model => model.AthleteName, "", 
                                                          new { @class = "text-danger" })
            </div>
        </div>

        <!------------------------------------------------------------------------------>
        <div class="form-group">
            @Html.LabelFor(model => model.Gender, 
                               htmlAttributes: new { @class = "control-label col-md-2" })

            <div class="col-md-10">
                @Html.DropDownList("gender",
                    (IEnumerable<SelectListItem>)ViewBag.GenderList,
                        "gender?", new { @class = "form-control", required = "required" })

                @Html.ValidationMessageFor(model => model.Gender, "", 
                                                        new { @class = "text-danger" })
            </div>
        </div>

        <!------------------------------------------------------------------------------>
        <div class="form-group">
            @Html.LabelFor(model => model.TeamID, "team", 
                               htmlAttributes: new { @class = "control-label col-md-2" })

            <div class="col-md-10">
                @Html.DropDownList("TeamID", null, "team name", htmlAttributes: 
                new { @class = "form-control", placeholder = "team name", required = "required" })
                @Html.ValidationMessageFor(model => model.TeamID, "", 
                                                          new { @class = "text-danger" })
            </div>
        </div>

        <!------------------------------------------------------------------------------>
        <div class="form-group">
            @Html.LabelFor(model => model.CoachID, "coach", htmlAttributes: 
                                               new { @class = "control-label col-md-2" })

            <div class="col-md-10">
                @Html.DropDownList("CoachID", null, "coach name", htmlAttributes: 
                new { @class = "form-control", placeholder = "coach name", required = "required" })
                @Html.ValidationMessageFor(model => model.CoachID, "", 
                                                          new { @class = "text-danger" })
            </div>
        </div>

        <!------------------------------------------------------------------------------>
        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="save" class="btn btn-default" />
            </div>
        </div>
        <!------------------------------------------------------------------------------>
    </div>
}
<!-------------------------------------------------------------------------------------->
<div>
    @Html.ActionLink("back to all athletes", "Index")
</div>
<!-------------------------------------------------------------------------------------->
@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
<!-------------------------------------------------------------------------------------->