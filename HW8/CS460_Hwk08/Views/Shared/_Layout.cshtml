<!DOCTYPE html>
<html>
    <head>
        <meta charset="utf-8" />
        <meta name="viewport" content="width=device-width, initial-scale=1.0">
        <title>@ViewBag.Title - My ASP.NET Application</title>
        @Styles.Render("~/Content/css")
        @Scripts.Render("~/bundles/modernizr")
    </head>

    <!---------------------------------------------------------------------------------->
    <body>
        <div class="navbar navbar-inverse navbar-fixed-top">
            <div class="container">
                <div class="navbar-header">
                    <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                        <span class="icon-bar"></span>
                        <span class="icon-bar"></span>
                        <span class="icon-bar"></span>
                    </button>
                    @Html.ActionLink("track tracker", "Index", "Home", new { area = "" }, new { @class = "navbar-brand" })
                </div>
                <div class="navbar-collapse collapse">
                    <ul class="nav navbar-nav">
                        <li>@Html.ActionLink("athletes", "Index", "Athletes")</li>
                        <li>@Html.ActionLink("teams", "Index", "Teams")</li>
                        <li>@Html.ActionLink("coaches", "Index", "Coaches")</li>
                        <li>@Html.ActionLink("events", "Index", "Events")</li>
                        <li>@Html.ActionLink("locations", "Index", "Locations")</li>
                        <li>@Html.ActionLink("meet results", "Index", "RaceResults")</li>
                    </ul>
                </div>
            </div>
        </div> <!-- end of all the navbar crap -->

        <!---------------------------------------------------------------------------------->
        <div class="container body-content">
            @RenderBody()
        

            <footer class="my_foot">
                <hr />
                <p>
                    &copy; @DateTime.Now.Year - Western Oregon University &gt;
                    Computer Science &gt; CS460: Software Engineering I &gt;
                    Homework 8 &gt; stormy
                </p>
            </footer>


        </div> <!-- end 'container body-content' div -->

        <!---------------------------------------------------------------------------------->

        @Scripts.Render("~/bundles/jquery")
        @Scripts.Render("~/bundles/bootstrap")

        <!-- this is what pulls in your own .js files 
             when you put them on the appropriate page -->
        @RenderSection("scripts", required: false)

        <!---------------------------------------------------------------------------------->
    </body>
</html>
