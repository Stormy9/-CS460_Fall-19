@model CS460_Hwk08.Models.Location

@{
    ViewBag.Title = "edit this location";
}

<h2>edit this location</h2>


@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    
    <div class="form-horizontal">
        <!------------------------------------------------------------------------------>
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        @Html.HiddenFor(model => model.LocationID)

        <div class="form-group">
            @Html.LabelFor(model => model.LocationName, htmlAttributes: new { @class = "control-label col-md-2" })
            
            <div class="col-md-10">
                @Html.EditorFor(model => model.LocationName, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.LocationName, "", new { @class = "text-danger" })
            </div>
        </div>

        <!------------------------------------------------------------------------------>
        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="save" class="btn btn-default" />
            </div>
        </div>
    </div>
}
<!-------------------------------------------------------------------------------------->
<div>
    @Html.ActionLink("back to all locations", "Index")
</div>
<!-------------------------------------------------------------------------------------->
@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
