@model IEnumerable<CS460_Hwk06.Models.StockItem>


@{
    ViewBag.Title = "your search results.....";
}


<div class="row" style="margin-bottom: 9px;">
    <div class="col-md-6">
        <h2 style="text-align: left;">@ViewBag.Title</h2>
    </div>

    <div class="col-md-6">
        <!-- this is proving a pain-in-the-ass to position & style like i want -->
        @*<button type="button" class="btn btn-basic" style="color:white;">
            @Html.ActionLink("do a new search", "Index", new { style="color:white;" } )
        </button>*@
        
        <!-- i forgot how annoying divs can be to align..... ha! -->
        <!-- but not nearly as annoying as changing link text colors with bootstrap -->
        <!-- so i changed the background color, instead.....     -->
        <div style="text-align: right">
            <div class="fakeButton">
                @Html.ActionLink("do a new search", "Index", new { style="color:white;" } )
            </div>
        </div>
    </div>
</div><!-- end of row div -->


<table class="table table-striped">
    <thead>
        <tr>
            <th colspan="2">Stock Item Name</th>
        </tr>
    </thead>

    <!-- the `if(Model != null)` added at Brittany's suggestion when nothing was returning -->
    <tbody>
        @if (Model != null)
        {
            if (Model.Count() == 0)
            {
            <tr>
                <td colspan="2">nothing matched your search for @ViewBag.SearchTerm</td>
            </tr>
            }
            else
            {
                foreach (var item in Model)
                {
                    <tr>
                        <td>@Html.DisplayFor(modelItem => item.StockItemName)</td>
                        <td>@Html.ActionLink("see item details", "StockItemDetails", new { id = item.StockItemID })</td>
                    </tr>
                }
            }
        }
    </tbody>
</table>