@model IEnumerable<CS460_Final_Exam.Models.Event>

@{
    ViewBag.Title = "Listing of Current Events";
}

<h2>@ViewBag.Title</h2>

<p>
    @Html.ActionLink("Add an Event", "Create")
</p>
<table class="table">
    <tr>
        <!-- i set 'DisplayName's in Models/Event..... but isn't carrying over -->
        <th>
            @*@Html.DisplayNameFor(model => model.EventTitle)*@
            Event Title
        </th>

        <th>
            @*@Html.DisplayNameFor(model => model.EventStart)*@
            Event Date & Time
        </th>

        <th>
            @*@Html.DisplayNameFor(model => model.Person.FirstName)*@
            Event Coordinator
        </th>

        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.EventTitle)
        </td>

        <td>
            @Html.DisplayFor(modelItem => item.EventStart)
        </td>

        <td>
            @Html.DisplayFor(modelItem => item.Person.FirstName)&nbsp; 
            @Html.DisplayFor(modelItem => item.Person.LastName)
        </td>        

        <td>
            @Html.ActionLink("Edit", "Edit", new { id=item.EventID }) |
            @Html.ActionLink("Details", "Details", new { id=item.EventID }) |
            @Html.ActionLink("Delete", "Delete", new { id=item.EventID })
        </td>
    </tr>
}

</table>
